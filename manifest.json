{
  "manifest_version": 2,
  "name": "Speak-Genius Chrome EXT",
  "version": "0.1",
  "background": {
    "scripts": ["./background.js"],
    "persist": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["./content.js"]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_title": "Speak Genius"
  }
}